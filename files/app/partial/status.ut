<div id="c1">
    <div id="general">
        {{ _R("general") }}
    </div>
    <div id="location">
        <hr>
        {{ _R("location") }}
    </div>
</div>
<div id="c2">
    {% if (messages.haveMessages()) { %}
    <div id="messages">
        {{ _R("messages") }}
    </div>
    {% } %}
    <div id="services">
        {% if (auth.authenticated) { %}
        {{ _R("internal-services" )}}
        {% } %}
        {{ _R("local-services") }}
    </div>
    <div id="local-and-neighbor-devices">
        <hr>
        {{ _R("local-and-neighbor-devices") }}
    </div>
</div>
<div id="c3">
    <div id="radio-and-antenna">
        {{ _R("radio-and-antenna") }}
    </div>
    <div id="mesh-summary">
        <hr>
        {{ _R("mesh-summary") }}
    </div>
    <div id="dhcp">
        <hr>
        {{ _R("dhcp") }}
    </div>
    {% if (length(hardware.getEthernetPorts()) > 0) { %}
    <div id="ports-and-xlinks">
        <hr>
        {{ _R("ports-and-xlinks") }}
    </div>
    {% } %}
    <div id="tunnels">
        <hr>
        {{ _R("tunnels") }}
    </div>
</div>
